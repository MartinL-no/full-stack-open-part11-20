{
  "engines": {
    "node": "v16.14.2"
  },
  "name": "fullstackopen-cicd",
  "version": "1.0.0",
  "description": "Full Stack Open",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon index.js",
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "start:test": "cross-env NODE_ENV=test node index.js",
    "start:frontend": "cd frontend && npm run start",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "test:e2e": "cd frontend && npm run cypress:run",
    "lint": "eslint .",
    "build:ui": "rm -rf build && cd ./frontend && npm run build && cp -r build ../.",
    "deploy": "fly deploy",
    "deploy:full": "npm run build:ui && npm run deploy",
    "logs:prod": "fly logs"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.5.1",
    "node": "^18.7.0"
  },
  "devDependencies": {
    "eslint": "^8.29.0",
    "eslint-plugin-jest": "^27.1.6",
    "jest": "^28.1.3",
    "cypress": "12.1.0",
    "nodemon": "^2.0.19",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns" : [
      "<rootDir>/frontend/" 
    ]
  }
}
